{
  "compileOnSave": false,
  "compilerOptions": {
    // "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    // "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    // "module": "esnext",
    // "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "outDir": "dist", /* Redirect output structure to the directory. */
    "pretty": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    // "target": "esnext",
    // "typeRoots": [
    // "./node_modules/@types",
    // "./typings"
    // ],
  },
  "exclude": [
    ".next",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
